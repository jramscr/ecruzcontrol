<%= simple_form_for(@services_request, url: services_requests_path, remote: boolean) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: false, placeholder: '* Nombre', input_html: { class: 'required' } %>
    <%= f.input :lastname, label: false, placeholder: 'Apellido'  %>
    <%= f.input :phone, label: false, placeholder: '* Teléfono', input_html: { class: 'required' } %>
    <%= f.input :email, type: :email, label: false, placeholder: 'Correo'  %>
    <%= f.input :details, type: :text, label: false, placeholder: '* Escribe el servicio que deseas recibir o solicita una cotización', input_html: { class: 'required' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit , "Solicitar servicios", class: 'submit-services-request pull-right' %>
  </div>
<% end %>

<br>
<p><small>Los campos con (*) son requeridos</small></p>
